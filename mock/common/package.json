{
  "name": "@app/common",
  "wireit": {
    "build": {
      "command": "echo 'build'",
      "dependencies": [
        "tsc",
        "css",
        "../core:build"
      ]
    },
    "css": {
      "command": "echo 'css'"
    },
    "tsc": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**",
        "tsconfig.json"
      ],
      "output": [
        "dist/**",
        "tsconfig.tsbuildinfo"
      ]
    }
  }
}
