{
  "name": "wireit-visualizer",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "target/main.js",
  "bin": "target/main.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "wireit",
    "build": "wireit"
  },
  "wireit": {
    "start": {
      "command": "node target/main.js",
      "service": true,
      "files": [
        "target/**",
        "views/**"
      ],
      "dependencies": [
        "build",
        "./mock/common:build"
      ]
    },
    "build": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**",
        "tsconfig.json"
      ],
      "output": [
        "target/**",
        "tsconfig.tsbuildinfo"
      ],
      "dependencies": [
        "./mock/core:build"
      ]
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/nunjucks": "^3.2.6",
    "typescript": "^5.3.2",
    "wireit": "^0.14.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mermaid": "^10.6.1",
    "nunjucks": "^3.2.4"
  }
}
