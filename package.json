{
  "name": "wireit-visualizer",
  "version": "1.1.1",
  "description": "",
  "type": "module",
  "exports": {
    ".": {
      "import": "./target/lib.js"
    }
  },
  "bin": {
    "wireit-visualizer": "target/main.js"
  },
  "author": "",
  "license": "ISC",
  "files": [
    "target",
    "views",
    "vendor"
  ],
  "scripts": {
    "start": "wireit",
    "test": "wireit",
    "build": "wireit"
  },
  "wireit": {
    "start": {
      "command": "node target/main.js",
      "service": true,
      "files": [
        "target/**",
        "views/**"
      ],
      "dependencies": [
        "build",
        "./mock/common:build"
      ]
    },
    "build": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**",
        "tsconfig.json"
      ],
      "output": [
        "target/**",
        "tsconfig.tsbuildinfo"
      ],
      "dependencies": [
        "graphviz",
        "./mock/core:build"
      ]
    },
    "test": {
      "command": "ava target/**/*.test.js",
      "output": [],
      "dependencies": [
        "build"
      ]
    },
    "graphviz": {
      "command": "cp -R node_modules/@viz-js vendor",
      "clean": "if-file-deleted",
      "files": [
        "node_modules/@viz-js/**"
      ],
      "output": [
        "vendor/@viz-js/**"
      ]
    }
  },
  "dependencies": {
    "detect-port": "^1.5.1",
    "express": "^4.18.2",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@viz-js/viz": "^3.2.3",
    "@types/detect-port": "^1.3.5",
    "@types/express": "^4.17.21",
    "@types/nunjucks": "^3.2.6",
    "ava": "^5.3.1",
    "typescript": "^5.3.2",
    "wireit": "^0.14.1"
  }
}
